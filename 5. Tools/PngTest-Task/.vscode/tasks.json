{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\MinGW-11.2.0\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}\\*.h",
                "${fileDirname}\\*.c",
                "${fileDirname}\\*.cpp",
                "-I",
                "${fileDirname}\\zlib\\include",
                "-I",
                "${fileDirname}\\pnglib\\include",
                "-L",
                "${fileDirname}\\zlib\\lib",
                "-L",
                "${fileDirname}\\pnglib\\lib",
                "-lpng16",
                "-lzlibstatic",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: D:\\MinGW-11.2.0\\bin\\g++.exe"
        },
    ]
}